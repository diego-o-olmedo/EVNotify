<?xml version='1.0' encoding='utf-8'?>
<widget id="com.evnotify.app" version="1.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EVNotify</name>
    <description>
        EVNotify allows you to control your electric vehicle and let you notify when the specified preset state of charge has been achieved.
    </description>
    <author email="info@evnotify.de" href="https://evnotify.de">
        EVNotify
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="assets/hdpi/icon.png" density="hdpi" />
        <icon src="assets/mdpi/icon.png" density="mdpi" />
        <icon src="assets/xhdpi/icon.png" density="xhdpi" />
        <icon src="assets/xxhdpi/icon.png" density="xxhdpi" />
        <icon src="assets/xxxhdpi/icon.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-bluetooth-serial" spec="~0.4.7" />
</widget>
